#include <iostream>
#include <string>
using namespace std;

int main()

{
    double budget; cin >> budget;
    string season; std::cin >> season;
    string destination;
    double price;
    string holiday;

    if (budget <= 100){
        destination = "Bulgaria";
        if (season == "summer"){
            price = budget - (budget * 0.7);
            holiday = "Camp";
        }else if (season == "winter"){
            price = budget - (budget * 0.3);
            holiday = "Hotel";
        }
    }else if (budget <= 1000){
        destination = "Balkans";
        if (season == "summer"){
            price = budget - (budget * 0.6);
            holiday = "Camp";
        }else if (season == "winter"){
            price = budget - (budget * 0.2);
            holiday = "Hotel";
        }
    }else {
        destination = "Europe";
        price = budget - (budget * 0.1);
        holiday = "Hotel";
        }
        
    cout.setf(ios::fixed);
    cout.precision(2);
    std::cout << "Somewhere in " << destination << endl;
    std::cout << holiday << " - " << price << endl;

    return 0;
